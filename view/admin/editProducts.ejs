<%- include("header") %>

    <section class="content-main">
        <form enctype="multipart/form-data" action="/admin/editProducts/<%= products._id %>" method="POST">
            <input type="hidden" value="<%= products._id %>" name="editID" id="editID">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Product</h2>
                        <div id="successMessageForFetch" style="display: none;" class="alert alert-success text-center mt-5" role="alert"></div>
                        <% if (message) { %>
                            <div id="successMessage" class="alert alert-success text-center mt-5" role="alert">
                                <%= message %>
                            </div>
                        <% } %>
                        <% if (errMessage) { %>
                            <div id="errorMessage" class="alert alert-danger text-center mt-5" role="alert">
                                <%= errMessage %>
                            </div>
                        <% } %>
                        <div>
                            <button class="btn btn-md rounded font-sm hover-up" type="submit">Publish</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name</label>
                                <input type="text" placeholder="Type here" class="form-control" id="product_name" name="product_name" value="<%= products.product_name %>">
                                <div id="productNameError" class="error" style="color: red;"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="description"><%= products.description %></textarea>
                                <div id="descriptionError" class="error" style="color: red;"></div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="text" class="form-control" id="regular_price" name="regular_price" value="<%= products.regular_price %>">
                                            <div id="regularPriceError" class="error" style="color: red;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Sales price</label>
                                        <input placeholder="$" type="text" class="form-control" id="sales_price" name="sales_price" value="<%= products.sales_price %>">
                                        <div id="salesPriceError" class="error" style="color: red;"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Size</label>
                                    <select class="form-select" id="size" name="size">
                                        <option value="s" <%=products.size==='s' ? 'selected' : '' %>>s</option>
                                        <option value="M" <%=products.size==='M' ? 'selected' : '' %>>M</option>
                                        <option value="L" <%=products.size==='L' ? 'selected' : '' %>>L</option>
                                        <option value="XL" <%=products.size==='XL' ? 'selected' : '' %>>XL</option>
                                        <option value="XXL" <%=products.size==='XXL' ? 'selected' : '' %>>XXL</option>
                                        <option value="XXXL" <%=products.size==='XXXL' ? 'selected' : '' %>>XXXL</option>
                                    </select>
                                    <div id="sizeError" class="error" style="color: red;"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Brand</label>
                                        <div class="row gx-2">
                                            <input placeholder="Type here" type="text" class="form-control" id="brand" name="brand" value="<%= products.brand_name %>">
                                            <div id="brandError" class="error" style="color: red;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class "form-label">Stock</label>
                                        <input placeholder="0" type="text" class="form-control" id="stock" name="stock" value="<%= products.stock %>">
                                        <div id="stockError" class="error" style="color: red;"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Color</label>
                                    <input placeholder="Type here" type="text" class="form-control" id="color" name="color" value="<%= products.color %>">
                                    <div id="colorError" class="error" style="color: red;"></div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Material</label>
                                        <input placeholder="Type here" type="text" class="form-control" id="material" name="material" value="<%= products.material %>">
                                        <div id="materialError" class="error" style="color: red;"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <h4>Shipping</h4>
                                    <div class="mb-4">
                                        <label class="form-label">Shipping Fee</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="text" class="form-control" id="shipping_fee" name="shipping_fee" value="<%= products.shipping_fee %>">
                                            <div id="shippingFeeError" class="error" style="color: red;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Tax rate</label>
                                <input type="text" placeholder="%" class="form-control" id="tax_rate" name="tax_rate" value="<%= products.tax_rate %>">
                                <div id="taxRateError" class="error" style="color: red;"></div>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="updated-images" style="display: none;">
                                <label for="">Images:</label>
                                <div class="row"></div>
                            </div>
                            <div class="input-upload">
                                <label for="">Images:</label>
                                <% if (products.images && products.images.length > 0) { %>
                                    <div class="row">
                                        <% products.images.forEach(function(image, index) { %>
                                            <div class="col-lg-6 mb-3">
                                                <div class="image-container">
                                                    <img src="/admin/productImages/<%= image %>" alt="Product Image" class="product-image">
                                                    <button class="remove-image-btn" data-index="<%= index %>" type="button">Remove</button>
                                                    <input type="hidden" id="remove-image-indices" name="removeImageIndices" value="">
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                    <input type="hidden" id="image-index">
                                    <div class="selected-image-container">
                                        <img src="" alt="Selected Image" class="selected-image" style="display: none;">
                                    </div>
                                <% } else { %>
                                    <p>No images available for this product.</p>
                                <% } %>
                            </div>

                            <div class="upload-images">
                                <label for="images">Add Images:</label>
                                <!-- <label for="">Can choose 4 images</label> -->
                                <img src="/admin-assets/imgs/theme/upload.svg" alt="" style="width: 100px; height: 100px;">
                                <input class="form-control" type="file" id="imageInput" name="images" multiple>
                            </div>
                            <div id="imagePreview" class="image-preview">
                                <!-- Selected image previews will be displayed here -->
                            </div>
                            

                            <!-- <div class="input-upload">
                                <label for="">Can choose 4 images</label>
                                <img src="/admin-assets/imgs/theme/upload.svg" alt="">
                                <input class="form-control" type="file" name="images" multiple>
                            </div> -->
                        

                        </div>
                    </div> <!-- card end// -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Organization</h4>
                        </div>
                        <div class="card-body">
                            <div class="row gx-2">
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select name="categoryId" class="form-select" id="categoryId">
                                        <option value="<%= products.categoryId._id %>" selected><%= products.categoryId.name %></option>
                                        <% categories.forEach(function(category) { %>
                                            <% if (category._id.toString() !== products.categoryId._id.toString()) { %>
                                                <option value="<%= category._id %>"><%= category.name %></option>
                                            <% } %>
                                        <% }); %>
                                    </select>
                                    <div id="categoryIdError" class="error" style="color: red;"></div>
                                </div>
                            </div> <!-- row.// -->
                        </div>
                    </div> <!-- card end// -->
                </div>
            </div>
        </form>
    </section> <!-- content-main end// -->

