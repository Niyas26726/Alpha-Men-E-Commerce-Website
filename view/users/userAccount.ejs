<script>
    // JavaScript code to update the profile image preview
const profileImageInput = document.getElementById('profileImage');
const profileImagePreview = document.getElementById('profileImagePreview');

profileImageInput.addEventListener('change', (event) => {
    const file = event.target.files[0];
    if (file) {
        const url = URL.createObjectURL(file);
        profileImagePreview.src = url;
    } else {
        // Clear the preview if no file is selected
        profileImagePreview.src = '';
    }
});

// Assuming you have jQuery included

// Hide the selected profile image preview initially
$("#selectedProfileImageContainer").hide();

// Listen for changes in the profile image input
$("#profileImage").on("change", function() {
    const input = this;
    const selectedProfileImageContainer = $("#selectedProfileImageContainer");
    const existingProfileImage = $("#existingProfileImage");
    
    if (input.files && input.files[0]) {
        const reader = new FileReader();

        reader.onload = function(e) {
            // Display the selected image in selectedProfileImageContainer
            $("#profileImagePreview").attr("src", e.target.result);
            selectedProfileImageContainer.show();
            
            // Hide the existing profile image
            existingProfileImage.hide();
        };

        reader.readAsDataURL(input.files[0]);
    } else {
        // Clear the selected image and hide selectedProfileImageContainer
        $("#profileImagePreview").attr("src", "");
        selectedProfileImageContainer.hide();

        // Show the existing profile image or placeholder
        existingProfileImage.show();
    }
});

</script>
