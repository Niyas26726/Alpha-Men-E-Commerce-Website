    const emailRegex = /^[a-z0-9._%+-]+@gmail+\.[a-z]{3}$/;
    const email = document.getElementById('email').value;
    const emailError = $('#emailError'); // Get the error message element
    let isValid = true; // Initialize a flag to track email validity

    if (email.trim() === '') {
        emailError.text('Email cannot be empty');
        clearErrorWithDelay(emailError);
        isValid = false;
    } else if (!emailRegex.test(email)) {
        emailError.text('Please enter a valid email');
        clearErrorWithDelay(emailError);
        isValid = false;
    } else {
        emailError.text(''); // Clear error message
    }

    return isValid; // Return the validity status
}

